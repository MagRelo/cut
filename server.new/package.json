{
  "name": "server.new",
  "version": "1.0.0",
  "description": "Server for the Cut application",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "deploy": "bash deploy.sh",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:connections": "tsx src/scripts/testConnections.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:seedPGA": "tsx prisma/seedPGA.ts",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose down",
    "db:logs": "docker compose logs -f",
    "db:reset": "docker compose down -v && docker compose up -d && sleep 5 && npm run prisma:migrate && npm run prisma:seedPGA",
    "db:seed": "npm run prisma:seed",
    "db:seedPGA": "npm run prisma:seedPGA",
    "service:init-tournament": "tsx src/services/initTournament.ts",
    "service:update-tournament": "tsx src/services/updateTournament.ts",
    "service:update-players": "tsx src/services/updateTournamentPlayers.ts",
    "service:update-contest-lineups": "tsx src/services/updateContestLineups.ts",
    "service:close-contest": "tsx src/services/closeContest.ts",
    "service:distribute-contest": "tsx src/services/distributeContest.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "@sendgrid/mail": "^8.1.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/node-cron": "^3.0.11",
    "cheerio": "^1.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.11.1",
    "express": "^5.1.0",
    "node-cron": "^4.2.1",
    "porto": "^0.0.60",
    "twilio": "^5.7.0",
    "viem": "^2.31.4",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.30",
    "@vitest/coverage-v8": "^1.3.1",
    "prisma": "^5.10.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
