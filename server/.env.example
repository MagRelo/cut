# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/betthecut

# Authentication
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=24h

# Hyperliquid API
HYPERLIQUID_API_KEY=your-api-key-here
