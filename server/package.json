{
  "name": "server",
  "version": "1.0.0",
  "description": "Server for the Cut application",
  "type": "module",
  "main": "dist/src/index.js",
  "scripts": {
    "start": "node dist/src/index.js",
    "start:prod": "NODE_ENV=production node dist/src/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc && cp -r src/contracts/* dist/src/contracts/",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:seedPGA": "tsx prisma/seedPGA.ts",
    "db:seed": "npm run prisma:seed",
    "db:seedPGA": "npm run prisma:seedPGA",
    "service:init-tournament": "tsx src/services/initTournament.ts",
    "service:update-tournament": "tsx src/services/updateTournament.ts",
    "service:update-players": "tsx src/services/updateTournamentPlayers.ts",
    "service:update-contest-lineups": "tsx src/services/updateContestLineups.ts",
    "service:close-escrow": "tsx src/services/closeEscrowDeposits.ts",
    "service:distribute-contest": "tsx src/services/distributeContest.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.3",
    "@prisma/client": "^5.10.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/node-cron": "^3.0.11",
    "cheerio": "^1.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "hono": "^4.9.9",
    "jsonwebtoken": "^9.0.2",
    "mailersend": "^2.3.1",
    "node-cron": "^4.2.1",
    "porto": "0.2.23",
    "twilio": "^5.7.0",
    "viem": "^2.37.9",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.17.30",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^1.3.1",
    "prisma": "^5.10.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
